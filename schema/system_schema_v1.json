{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "System Schema v1",
  "description": "Schema for Singularity Delta system data",
  "type": "object",
  "required": ["system_name", "decisions", "constraints"],
  "properties": {
    "system_name": {
      "type": "string",
      "description": "Name of the system being analyzed",
      "minLength": 1,
      "maxLength": 200
    },
    "version": {
      "type": "string",
      "description": "System version identifier"
    },
    "decisions": {
      "type": "array",
      "description": "List of decisions in the system",
      "items": {
        "type": "object",
        "required": ["id", "description"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique decision identifier"
          },
          "description": {
            "type": "string",
            "description": "Human-readable description of the decision"
          },
          "priority": {
            "type": "number",
            "description": "Priority level (0-100)",
            "minimum": 0,
            "maximum": 100
          },
          "confidence": {
            "type": "number",
            "description": "Confidence level (0-1)",
            "minimum": 0,
            "maximum": 1
          },
          "tags": {
            "type": "array",
            "description": "Tags or categories",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "constraints": {
      "type": "object",
      "description": "System constraints",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "description": "Type of constraint"
          },
          "applies_to": {
            "type": "array",
            "description": "Decision IDs this constraint applies to",
            "items": {
              "type": "string"
            }
          },
          "value": {
            "description": "Constraint value (any type)"
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "System metadata",
      "properties": {
        "version": {
          "type": "string",
          "description": "Data version"
        },
        "created": {
          "type": "string",
          "description": "Creation timestamp",
          "format": "date-time"
        },
        "author": {
          "type": "string",
          "description": "Author or creator"
        },
        "description": {
          "type": "string",
          "description": "System description"
        }
      }
    }
  }
}
